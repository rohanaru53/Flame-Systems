<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vaibhav.flamex" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_notification"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
             android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BarcodeScanner"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.BARCODESCANNER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".UpdateInventory"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.UPDATEINVENTORY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Add"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            >
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.ADD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Addproducts"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.ADDPRODUCTS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".AddCategory"
            android:label="@string/app_name"
           >
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.ADDCATEGORY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name="calc"
            android:label="Calculator"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.ADDCATEGORY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Discount_calc"
            android:label="Calculator"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.DISCOUNTCALC" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Analytics"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.ANATICS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Billhistory"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.BILLHISTORY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.HOMEACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
