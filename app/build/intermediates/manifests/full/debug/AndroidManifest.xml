            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.vaibhav.flamex.BarcodeScanner"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="com.example.vaibhav.flamex.BARCODESCANNER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.vaibhav.flamex.UpdateInventory"
            android:label="@string/app_name"
