                <action android:name="com.example.vaibhav.flamex.ADDCATEGORY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.vaibhav.flamex.Discount_calc"
            android:label="Calculator"
            android:screenOrientation="landscape"
